{{> Header }}


<form class="main" method="POST" action="{{ path 'movie' }}" id="movie-form">
    <div class="formItem">
        <label class="title" style="font-size:300%" for="movie">Movie name</label>
        <h3 class="title" style="font-size: 150%" id="error">{{error}}</h3>
        <input class="inputBoxes" type="movie" name="movie"/>
    </div>
    <input class="formButton" type="submit" value="Search" id="movie-form-submit-button">
</form>

{{> Footer }}